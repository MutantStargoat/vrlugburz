.PHONY: all
all: treestore imago drawtext anim psys gmath goatvr

.PHONY: clean
clean: clean-treestore clean-imago clean-drawtext clean-anim clean-gmath clean-goatvr

.PHONY: treestore
treestore:
	$(MAKE) -C treestore

.PHONY: clean-treestore
clean-treestore:
	$(MAKE) -C treestore clean

.PHONY: imago
imago:
	$(MAKE) -C imago

.PHONY: clean-imago
clean-imago:
	$(MAKE) -C imago clean

.PHONY: drawtext
drawtext:
	$(MAKE) -C drawtext

.PHONY: clean-drawtext
clean-drawtext:
	$(MAKE) -C drawtext clean

.PHONY: anim
anim:
	$(MAKE) -C anim

.PHONY: clean-anim
clean-anim:
	$(MAKE) -C anim clean

.PHONY: psys
psys:
	$(MAKE) -C psys

.PHONY: clean-psys
clean-psys:
	$(MAKE) -C psys clean

.PHONY: gmath
gmath:
	$(MAKE) -C gmath

.PHONY: clean-gmath
clean-gmath:
	$(MAKE) -C gmath clean

.PHONY: goatvr
goatvr:
	$(MAKE) -C goatvr

.PHONY: clean-goatvr
clean-goatvr:
	$(MAKE) -C goatvr clean

